@model WCF_Assignment_2.Models.EmployeeViewModel

@{
    ViewBag.Title = "Index";
}
<div id="divEmployeeForm">
    @using (Html.BeginForm("AddorUpdate", "Employee", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.Employee.Id);
        <div class="col-lg-12">
            <h1 class="panel-heading">Employee</h1>

        </div>
        <div class="container">
            <div class="panel-default">
                <input type="hidden" id="CustomerId" />
                <div id="customerForm" class="col-lg-4">
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Employee.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Employee.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Employee.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Employee.Gender, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Employee.Gender, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Employee.Gender, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Employee.Salary, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Employee.Salary, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Employee.Salary, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row" style="margin-left:35%">
                        <button type="submit" id="btnsave" class="btn btn-primary">Save</button>

                        <button type="reset" id="btnClear" class="btn btn-primary">Clear</button>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <table id="tblEmpDtls" class="table table-bordered table-striped">
                    <tr>


                        <th>
                            @Html.DisplayNameFor(model => model.Employee.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee.Gender)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employee.Salary)
                        </th>
                        <th>Action</th>
                    </tr>

                    @foreach (var Employee in Model.EmployeeList)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => Employee.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Employee.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Employee.Salary)
                            </td>
                            <td>
                                <a style="cursor:pointer" onclick="GetEmployee(@Employee.Id)">Edit</a> |
                                <a style="cursor:pointer" onclick="DeleteEmployee(@Employee.Id)">Delete</a>
                            </td>


                        </tr>
                    }

                </table>

            </div>

        </div>

    }
</div>